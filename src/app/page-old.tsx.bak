'use client';

import { useState, useEffect } from 'react';
import { useUser, UserButton } from '@clerk/nextjs';
import { useMeetingsStore } from '@/store/meetings';
import UploadPanel from '@/components/UploadPanel';
import BoardView from '@/components/BoardView';
import { Loader2, Layers, AlertCircle } from 'lucide-react';
import { formatDateTime } from '@/lib/utils';

const DEMO_MODE = !process.env.NEXT_PUBLIC_HAS_API_KEY;

export default function Home() {
  const { user, isLoaded } = useUser();
  const [view, setView] = useState<'upload' | 'board' | 'list'>('upload');
  const [selectedMeetingId, setSelectedMeetingId] = useState<string | null>(null);
  
  const { 
    currentMeeting, 
    meetings, 
    isLoading, 
    fetchMeeting, 
    fetchMeetings,
    setCurrentMeeting 
  } = useMeetingsStore();

  useEffect(() => {
    if (view === 'list') {
      fetchMeetings();
    }
  }, [view, fetchMeetings]);

  useEffect(() => {
    if (selectedMeetingId) {
      fetchMeeting(selectedMeetingId);
    }
  }, [selectedMeetingId, fetchMeeting]);

  const handleProcessComplete = (meetingId: string) => {
    setSelectedMeetingId(meetingId);
    setView('board');
  };

  const handleBackToUpload = () => {
    setView('upload');
    setSelectedMeetingId(null);
    setCurrentMeeting(null);
  };

  const handleViewMeetings = () => {
    setView('list');
  };

  const handleSelectMeeting = (meetingId: string) => {
    setSelectedMeetingId(meetingId);
    setView('board');
  };

  return (
    <div className="min-h-screen">
      {/* Demo Mode Banner */}
      {DEMO_MODE && (
        <div className="bg-yellow-50 border-b border-yellow-200">
          <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
            <div className="flex items-center gap-2 text-yellow-800">
              <AlertCircle className="w-5 h-5" />
              <span className="text-sm font-medium">
                ðŸŽ­ Demo Mode: Using mock AI responses. Add ANTHROPIC_API_KEY for real Claude AI processing.
              </span>
            </div>
          </div>
        </div>
      )}

      {/* Header */}
      <header className="bg-white border-b border-gray-200 sticky top-0 z-10">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center py-6">
            <div className="flex items-center gap-3">
              <div className="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg flex items-center justify-center">
                <Layers className="w-6 h-6 text-white" />
              </div>
              <div>
                <h1 className="text-2xl font-bold text-gray-900">NextBoard</h1>
                <p className="text-sm text-gray-600">Where meetings become actions</p>
              </div>
            </div>
            
            <nav className="flex gap-2 items-center">
              <button
                onClick={() => setView('upload')}
                className={`px-4 py-2 rounded-lg transition-colors ${
                  view === 'upload'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                }`}
              >
                New Board
              </button>
              <button
                onClick={handleViewMeetings}
                className={`px-4 py-2 rounded-lg transition-colors ${
                  view === 'list'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                }`}
              >
                My Boards
              </button>
              
              {/* User Profile Button */}
              {isLoaded && user && (
                <div className="flex items-center gap-3 ml-2 pl-2 border-l border-gray-200">
                  <span className="text-sm text-gray-600 hidden sm:block">
                    {user.firstName || user.emailAddresses[0].emailAddress}
                  </span>
                  <UserButton 
                    appearance={{
                      elements: {
                        avatarBox: 'w-10 h-10',
                      },
                    }}
                  />
                </div>
              )}
            </nav>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {view === 'upload' && (
          <div className="space-y-8">
            <div className="text-center max-w-2xl mx-auto mb-12">
              <h2 className="text-4xl font-bold text-gray-900 mb-4">
                Transform Meetings into Action
              </h2>
              <p className="text-lg text-gray-600">
                Upload your meeting transcript or recording and let AI extract action items, 
                decisions, and follow-ups into a beautiful Kanban board.
              </p>
            </div>
            <UploadPanel onProcessComplete={handleProcessComplete} />
          </div>
        )}

        {view === 'list' && (
          <div>
            <h2 className="text-3xl font-bold text-gray-900 mb-8">Your Meeting Boards</h2>
            
            {isLoading ? (
              <div className="flex items-center justify-center py-12">
                <Loader2 className="w-8 h-8 animate-spin text-blue-600" />
              </div>
            ) : meetings.length === 0 ? (
              <div className="text-center py-12">
                <p className="text-gray-500 mb-4">No meetings yet</p>
                <button
                  onClick={() => setView('upload')}
                  className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                  Create Your First Board
                </button>
              </div>
            ) : (
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {meetings.map((meeting) => (
                  <div
                    key={meeting.id}
                    onClick={() => handleSelectMeeting(meeting.id)}
                    className="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow cursor-pointer"
                  >
                    <h3 className="text-lg font-semibold text-gray-900 mb-2">
                      {meeting.title}
                    </h3>
                    <p className="text-sm text-gray-600 mb-4 line-clamp-2">
                      {meeting.summary}
                    </p>
                    <div className="flex items-center justify-between text-sm text-gray-500">
                      <span>{meeting.cards.length} items</span>
                      <span>{formatDateTime(meeting.createdAt)}</span>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {view === 'board' && currentMeeting && (
          <BoardView meeting={currentMeeting} onBack={handleBackToUpload} />
        )}

        {view === 'board' && !currentMeeting && isLoading && (
          <div className="flex items-center justify-center py-12">
            <Loader2 className="w-8 h-8 animate-spin text-blue-600" />
          </div>
        )}
      </main>

      {/* Footer */}
      <footer className="bg-white border-t border-gray-200 mt-20">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div className="text-center text-gray-600 text-sm">
            <p>NextBoard - Powered by Anthropic Claude 3.5 Sonnet ðŸ¤–</p>
            <p className="mt-2">next-board.ai | next-board.io</p>
          </div>
        </div>
      </footer>
    </div>
  );
}

